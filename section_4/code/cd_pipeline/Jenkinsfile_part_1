#!/usr/bin/groovy

pipeline {
    agent any

    options {
        disableConcurrentBuilds()
    }

    stages {

        stage("Build") {
            steps { buildApp() }
        }

        stage("Deploy - Dev") {
            steps { deploy('dev') }
        }

    }
}

// steps
def buildApp() {
    dir ('section_4/code/cd_pipeline') {
        def appImage = docker.build("hands-on-jenkins/myapp:${BUILD_NUMBER}")
    }
}

def deploy(environment) {

    def containerName = ''
    def port = ''

    if ("${environment}" == 'dev') {
        containerName = "app_dev"
        port = "8888"
    } else {
        println "Environment not valid"
        System.exit(0)
    }

    // Comprobar si el contenedor está en ejecución
    bat """
        echo Comprobando si el contenedor ${containerName} está en ejecución
        docker ps -f "name=${containerName}" -q
    """

    // Detener los contenedores si están corriendo
    bat """
        echo Deteniendo contenedores con nombre ${containerName}
        for /f "tokens=*" %%i in ('docker ps -f "name=${containerName}" -q') do (
            if %%i NEQ "" docker stop %%i
        )
    """

    // Eliminar contenedores detenidos
    bat """
        echo Eliminando contenedores detenidos con nombre ${containerName}
        for /f "tokens=*" %%i in ('docker ps -a -f "name=${containerName}" -q') do (
            if %%i NEQ "" docker rm %%i
        )
    """

    // Ejecutar el contenedor en el entorno de desarrollo
    bat """
        echo Ejecutando el contenedor ${containerName} en el puerto ${port}
        docker run -d -p ${port}:5000 --name ${containerName} hands-on-jenkins/myapp:${BUILD_NUMBER}
    """
}
